{
  "name": "@titanbtcio/sdk",
  "version": "0.0.16",
  "description": "SDK for Titan BTC indexer",
  "author": "Saturn BTC",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT or Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc --noEmit",
    "deploy": "npm run build && npm publish"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "requirePragma": false,
    "insertPragma": false,
    "endOfLine": "lf"
  },
  "dependencies": {
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "prettier": "^3.4.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  }
}
